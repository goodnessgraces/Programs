<div class = "row">
    <div class = "col-md-6 col-md-offset-3">
        <div class = "well">
            <h1>

            Look at your Local Forecast</h1>
            
                    <p><em>What's the weather like?</em></p>
                   <div><%= form_tag root_path do %>
                   <%= text_field_tag :city, nil, placeholder: "City Name" %> <br>
                   <%=  select_tag :state, options_for_select(@states), :prompt => "Please select" %> <br>
                   <%= submit_tag "Check Weather" %></div>
            </div>
        </div>
    </div>    

<div class = "row">
    <div class = "col-md-6 col-md-offset-3">
        <div class = "well">
            <h1>Welcome To <%= @location %>!</h1>
            <div class = "row">
                <div class = "col-md-7">
                    <p><em>What's the weather like?</em></p>
                    <p>
                        Temperature is: <%= @temp_f %>° / <%= @temp_c %>° C 
                    </p>
                    <p>
                        Feels like: <%= @real_feel %>° F
                    </p>
                </div>    
                <div class = "col-md-5">
                    <p>
                       <%= @weather_words%> <%= image_tag @weather_icon%> 
                    </p>
                    <p>
                        <%=link_to "Full Forecast", @forecast_link, target: "_blank" %>
                    </p>
                </div>
            </div>
        </div>
    </div>    
</div>
</div>