<p id="notice"><%= notice %></p>
<h1>Listing Enrollments</h1>
<div class="panel panel-default">
  <div class="panel-heading">

<h3 class="panel-title">Enrollments</h3>
  </div>
  </div>


  <div class="panel-body">
    <table class="table">
      <thead>


    <tr class="row">
      <th>Grade</th>
      <th>Student</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
    <tr class="row">
        <td><%= enrollment.grade %></td>
        <td><%= enrollment.student_id %></td>
        <td><%= enrollment.course.title %></td>
       <td><%= link_to 'Show', enrollment,:class => "btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment),:class => "btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', enrollment,:class => "btn-warning btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
  </div>
<br>

<div class="panel-footer"><%= link_to 'New Enrollment', new_department_path, :class => "btn-primary btn-sm" %>

  </div>
</div>









    





 
