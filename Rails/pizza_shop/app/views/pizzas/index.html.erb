<h1> All of Danica's Pizza's </h1>
<div class = "row">
<%@pizzas.each do|pizza| %>
  <div class = "col-sm-6 col-md-4">
  <div class = "thumbnail">
  <img src= "<%= pizza.image %>" alt="">
  <div class ="caption">
  <h3><%= pizza.name %></h3>
  <h3> cost: $<%= pizza.cost %></h3>
  </div>
  <%= link_to "More info", pizza, class: "btn btn-default" %>
  </div>
  </div>

  <% end%>
  </div>
